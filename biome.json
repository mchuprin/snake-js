{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",

	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},

	"files": {
		"ignoreUnknown": false,
		"includes": ["src/**"]
	},

	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 100
	},

	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noDescendingSpecificity": "error"
			},
			"correctness": {
			"noUnusedImports": "error",
			"noUnusedVariables": "error",
			"noUnusedPrivateClassMembers": "warn"
		}
		}
	},

	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},

	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on",
				 "useSortedProperties": "on"
			}
		}
	},

	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 1,
			"lineWidth": 100,
			"quoteStyle": "single"
		},
		"linter": {
			"enabled": true
		}
	}
}